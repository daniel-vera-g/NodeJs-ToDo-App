
<html>
  <head>
    <title>Todo List</title>
    <!-- Link Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- link to styles -->
    <link href="/assets/styles.css" rel="stylesheet" type="text/css"/>
    <!-- scripts -->
    <script src="/assets/todo-list.js"></script>
    </head>
    <body>
      <h1>My ToDo List</h1>
      <div id="todo-table">
        <form>
          <input type="text" name="item" placeholder="Add new item to the ToDo list" required />
          <button type="submit">Add Item</button>
        </form>
        <ul>      
          <!-- Dinamically inject dummy data into the view with the ejs engine -->
          <!-- Loop through the data array and output the Todo'S -->
          <% for(var i = 0; i < todos.length; i++){ %>
            <li><%= todos[i].item %></li>
         <% } %>
        </ul>
      </div>
    </body>
</html>
